---
import { Image } from "astro:assets";
import logo from "../images/svg/logo.svg";
import facebookLogo from "../images/svg/facebook-logo.svg";
import instagramLogo from "../images/svg/instagram-logo.svg";
import twitterLogo from "../images/svg/twitter-logo.svg";
import youtubeLogo from "../images/svg/youtube-logo.svg";
---

<footer>
  <div class="wrapper">
    <Image loading="eager" src={logo} alt="Logo" class="logo" />
    <div class="logos">
      <Image loading="eager" src={facebookLogo} alt="Facebook" />
      <Image loading="eager" src={instagramLogo} alt="Instagram" />
      <Image loading="eager" src={twitterLogo} alt="Twitter" />
      <Image loading="eager" src={youtubeLogo} alt="Youtube" />
    </div>
    <p>Â© 2023 Amanda Carvalho</p>
  </div>
</footer>

<style lang="scss">
  @import "../styles/variables.scss";

  footer {
    width: 100%;
    height: 8.125rem;
    display: flex;
    justify-content: center;
    padding-top: 3.5rem;
    background-color: $purple-dark;
    color: $white;
    font-size: 0.875rem;

    img.logo {
      height: 1.5rem;
    }

    div.logos {
      display: flex;
      gap: 1rem;

      img {
        width: 1.25rem;
      }
    }
  }

  div.wrapper {
    justify-content: space-between;
  }
</style>
