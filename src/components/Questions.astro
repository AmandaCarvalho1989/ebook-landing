---
import { Image } from "astro:assets";
import { questions } from "../constants/questions";
import plusIcon from "../images/svg/plus.svg";
import minusIcon from "../images/svg/target.svg";
---

<div class="questions">
  {
    questions.map((item, index) => {
      return (
        <div class="question">
          <div class="question-header">
            <h4>{item.question} </h4>
            <button id="toggle-question" data-question={index}>
              <Image
                loading="lazy"
                id="question-icon"
                class={`question-icon-${index}`}
                src={plusIcon}
                alt="Open answer"
                width="24"
              />
            </button>
          </div>
          <p id={`answer-${index}`}>{item.answer}</p>
        </div>
      );
    })
  }
</div>

<script>
  const toggleAnswer = (index) => {
    const answer = document.getElementById(`answer-${index}`);

    if (answer.style.display === "none") {
      answer.style.display = "block";
    } else {
      answer.style.display = "none";
    }
  };

  document.querySelectorAll("#toggle-question").forEach((element, index) => {
    element.addEventListener("click", () => {
      toggleAnswer(index);
    });
  });
</script>

<style lang="scss">
  div.questions {
    max-width: 40rem;
    button {
      padding: 0;
      width: auto;
      height: auto;
      background-color: transparent;
    }
    div.question {
      margin-bottom: 1.5rem;
      div.question-header {
        display: flex;
        justify-content: space-between;
      }

      p {
        transition: 0.5s ease-in-out;
      }
      &:not(:first-child) p {
        display: none;
        transition: 0.5s ease-in-out;
      }
    }
  }
</style>
